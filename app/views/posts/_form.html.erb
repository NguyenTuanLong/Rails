    </div>
  <% end %>

<div id="info" class="container tab-pane active"><br>
              <div id="chart" style="">
                <div class="row-12">
                  <div class="col-10">
                    <form>
                      <div class="form-group row">
                        <div><%= form.label :title, "Mã hàng", class: "col-*-4", style: "margin-left: 15px;"%></div>
