                          <%= form.text_field :body, class: "form-control", id: "infobar" %>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label><%= form.label :cost, "Giá vốn", class: "col-*-4", style: "margin-left: 15px;" %></label>
