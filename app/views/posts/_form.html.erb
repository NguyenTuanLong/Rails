                          <%= form.number_field :price, class: "form-control", id:"infobar"  %>
                        </div>
                      </div>
                      <div class="form-group row">
                        <div><%= form.label :quantity, "Số lượng",class: "col-*-4", style: "margin-left: 15px;" %></div>
                        <div class="col-*-8" style="margin-left: 60px;">
                          <%= form.number_field :quantity, class: "form-control", id: "infobar" %>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label><%= form.label :image, "Ảnh",class: "col-*-4", style: "margin-left: 15px;" %></label>
                        <div class="col-*-8" style="margin-left: 90px;">
                          <form>
                            <div class="custom-file">
                              <input >
                              <%= form.file_field :image, class: "custom-file-input", id: "customFile", style: "width: 400px;" %>
