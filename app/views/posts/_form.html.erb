                            </div>
                          </form>
                        </div>
                      </div>
                  </form>
                </div>

                <div class="col-3">
                </div>
              </div>
              <%= button_tag(type: 'submit', class: "btn btn-success", id: "searchbutton", style: "margin-bottom: 20px; margin-left: 835px !important;") do %>
