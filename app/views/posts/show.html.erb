<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <% if @post.image.attached? == false %>
  <p>No image attached</p>
  <% else %>
  <div style="width:400px; height:auto">
  <%= image_tag(@post.image, style: 'width:100%')%>
  </div>
  <% end %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email.split('@')[0].capitalize %>
</p>

<p>
  <strong>Price:</strong>
  <%= @post.price %> VNĐ
</p>

<p>
  <strong>Cost:</strong>
  <%= @post.cost %> VNĐ
</p>

<p>
  <strong>Quantity:</strong>
  <%= @post.quantity %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
