               <% @receipts.each do |receipt| %>
      <% receipt.records.each do |record| %>
        <tr>
          <td><%= record.receipt.id %></td>
          <td><%= record.receipt.created_at %></td>
          <td><%= record.title %></td>
          <td>
          <% if (record.image.attached? == true) %>
          <%= image_tag(record.image, height: 100, width: :auto) %>
          <% else %>
          No Image attached
          <% end %>
          </td>
          <td><%= record.body %></td>
          <td><%= record.price %> VNĐ</td>
          <td><%= record.cost %> VNĐ</td>
          <td><%= record.quantity %></td>
          <td class="item_price"><%= record.total_price %> VNĐ</td>
          <td class="item_price"><%= record.total_cost %> VNĐ</td>
          <td><%= link_to 'Xóa', record, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info btn-xs' %></td>
        </tr>
      <% end %>
      <tr class="total_line">
        <td><%= button_to 'Xóa hóa đơn', receipt, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" %></td>  
