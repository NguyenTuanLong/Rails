 <div class="container-fluid" id="producttable">
          <table class="table">
            <thead>
              <tr class="table-info">
              <th>ID Hóa đơn</th>
              <th>Ngày xuất </th>
              <th>Mã hàng</th>
              <th>Ảnh</th>
              <th>Tên hàng</th>
              <th>Giá bán</th>
              <th>Giá vốn</th>
