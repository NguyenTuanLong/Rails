<p id="notice"><%= notice %></p>

<h1>Records</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Body</th>
      <th>User</th>
      <th>Price</th>
      <th>Cost</th>
      <th>Quantity</th>
      <th>Total Price</th>
      <th>Total Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.title %></td>
        <td>
        <% if (record.image.attached? == true) %>
        <%= image_tag(record.image, height: 100, width: :auto) %>
        <% else %>
        No Image attached
        <% end %>
        </td>
        <td><%= record.body %></td>
        <td><%= record.user_id %></td>
        <td><%= record.price %> VNĐ</td>
        <td><%= record.cost %> VNĐ</td>
        <td><%= record.quantity %></td>

        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>
